{
    "compilerOptions": {
        "target": "ES2016",
        "module": "ES6",
        "moduleResolution": "Node",
        "declaration": true,
        "outDir": "build",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/simulations"
    ]
}