{
	"name": "@lachlandk/pulsar",
	"version": "0.0.3",
	"description": "A javascript data visualisation framework",
	"main": "dist/pulsar/index.js",
	"module": "dist/pulsar/index.js",
	"types": "dist/types/index.d.ts",
	"type": "module",
	"sideEffects": false,
	"dependencies": {
		"@lachlandk/quasar": "^0.0.3"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^13.3.0",
		"c8": "^7.7.3",
		"chai": "^4.3.4",
		"jsdom": "^16.6.0",
		"mocha": "^10.2.0",
		"rollup": "^2.53.2",
		"sinon": "^11.1.1",
		"typedoc": "^0.21.4",
		"typescript": "^4.3.5",
		"vuepress": "^1.9.7"
	},
	"scripts": {
		"build": "rmdir build /s/q & tsc && rollup -c",
		"watch": "rmdir build /s/q & tsc --watch",
		"dist": "rmdir dist /s/q & tsc --declarationDir dist/types --outDir dist/pulsar",
		"test": "c8 mocha \"./tests/**/*.js\"",
		"devdocs": "vuepress dev docs/src",
		"docs": "vuepress build docs/src"
	},
	"c8": {
		"all": true,
		"include": [
			"build/pulsar/**"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lachlandk/pulsar.git"
	},
	"author": "Lachlan Dufort-Kennett",
	"license": "GPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/lachlandk/pulsar/issues"
	},
	"homepage": "https://github.com/lachlandk/pulsar#readme"
}
